/* =========================================
   B. WIDE VIEW FIX (>1380px)
   ========================================= */
@media screen and (min-width: 1380px) {
    
    /* 1. THE SIDEBAR WRAPPER (Anchored) */
    .right-sidebar, .sidebar {
        position: fixed !important; 
        top: 100px !important; 
        bottom: 40px !important; 
        left: calc(50% + 470px) !important; 
        width: 220px !important; 
        
        height: auto !important; 
        max-height: none !important;
        overflow-y: auto !important; /* Scroll here */
        scrollbar-width: none; 
        
        margin: 0 !important;
        background: transparent !important;
        border: none !important;
        z-index: 100 !important;
    }

    /* 2. INNER CONTAINERS (Backlinks & TOC) */
    .right-sidebar .backlinks, 
    .right-sidebar .toc-container,
    .sidebar .backlinks,
    .sidebar .toc-container {
        background-color: transparent !important;
        border: none !important;
        box-shadow: none !important;
        padding: 0 !important;
        margin: 0 !important;
        margin-bottom: 40px !important; /* Gap between blocks */
        
        /* Unlock height */
        height: auto !important;
        max-height: none !important;
        overflow: visible !important;
    }

    /* 3. TYPOGRAPHY POLISH (The Clean List Look) */
    .sidebar-title {
        font-size: 0.85em !important;
        font-weight: 700 !important;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        margin-bottom: 12px !important;
    }
    
    /* Target the new UL */
    ul.backlinks-list {
        list-style: none !important;
        padding: 0 !important;
        margin: 0 !important;
    }
    
    /* Target the new LI */
    li.backlink-item {
        margin-bottom: 6px !important;
        font-size: 0.9em !important;
        line-height: 1.4;
    }
    
    /* Links styling */
    li.backlink-item a {
        color: var(--text-normal);
        text-decoration: none;
        border-bottom: 1px solid transparent; /* Hover effect prep */
        transition: all 0.2s;
    }
    
    li.backlink-item a:hover {
        color: var(--interactive-accent);
        border-bottom-color: var(--interactive-accent);
    }
    
    .stacked-separator { display: none !important; }
}
